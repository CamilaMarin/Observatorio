<h2>Usuario</h2>
<p id="notice"><%= notice %></p>

<p>
  <strong>Id usuario:</strong>
  <%= @usuario.id_usuario %>
</p>

<p>
  <strong>Cuenta:</strong>
  <%= @usuario.cuenta %>
</p>

<p> <%= link_to "Agregar un tweet", new_usuario_tweet_path(@usuario) %> |
    <%= link_to 'Editar', edit_usuario_path(@usuario) %> |
    <%= link_to 'Eliminar', usuario_path(@usuario),:confirm => "¿Seguro desea eliminar este usuario?", :method => :delete%>|
    <%= link_to "Atras", usuarios_path %>
</p>
<hr />
<h3>Tabla Tweets</h3>

<table>
  <thead>
    <tr>
      <th>Id tweet</th>
      <th>Id texto</th>
      <th>Id usuario</th>
      <th>Region</th>
      <th>Fecha</th>
      <th>Clasificacion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.id_tweet %></td>
        <td><%= tweet.id_texto %></td>
        <td><%= tweet.id_usuario %></td>
        <td><%= tweet.region %></td>
        <td><%= tweet.fecha %></td>
        <td><%= tweet.clasificacion %></td>
        <td>    | <%= link_to 'Ver', usuario_tweet_path(@usuario, tweet) %> | </td> 
        <td><%= link_to 'Editar', edit_usuario_tweet_path(@usuario , tweet) %> | </td>
        <td><%= link_to 'Eliminar', usuario_tweet_path(@usuario , tweet), method: :delete, data: { confirm: '¿Está seguro?' } %> |</td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>