<h1>Tabla Bolsa de Palabras</h1>

<table>
  <thead>
    <tr>
      <th>Id palabrab</th>
      <th>Nombre palabra</th>
      <th>Puntaje</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @palabra_bolsas.each do |palabra_bolsa| %>
      <tr>
        <td><%= palabra_bolsa.id_palabrab %></td>
        <td><%= palabra_bolsa.nombre_palabra %></td>
        <td><%= palabra_bolsa.puntaje %></td>
        <td><%= link_to 'Ver', palabra_bolsa %></td>
        <td><%= link_to 'Editar', edit_palabra_bolsa_path(palabra_bolsa) %></td>
        <td><%= link_to 'Eliminar', palabra_bolsa, method: :delete, data: { confirm: '¿Está seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Palabra bolsa', new_palabra_bolsa_path %>
