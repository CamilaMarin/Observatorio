<h2>Tweet</h2>
<p id="notice"><%= notice %></p>

<p>
  <strong>Id tweet:</strong>
  <%= @tweet.id_tweet %>
</p>

<p>
  <strong>Id texto:</strong>
  <%= @tweet.id_texto %>
</p>

<p>
  <strong>Id usuario:</strong>
  <%= @tweet.id_usuario %>
</p>

<p>
  <strong>Region:</strong>
  <%= @tweet.region %>
</p>

<p>
  <strong>Fecha:</strong>
  <%= @tweet.fecha %>
</p>

<p>
  <strong>Clasificacion:</strong>
  <%= @tweet.clasificacion %>
</p>
<p> <%= link_to 'Editar', edit_usuario_tweet_path(@usuario,@tweet) %> |
    <%= link_to 'Eliminar', usuario_tweet_path(@usuario,@tweet),:confirm => "¿Seguro desea eliminar este tweet?", :method => :delete%> |
    <%= link_to "Atras", usuario_path(@usuario) %>
</p>
<hr />
<h3>Tabla Actor - Tweets</h3>

<table>
  <thead>
    <tr>
      <th>Id at</th>
      <th>Id actor</th>
      <th>Id tweet</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @actor_tweets.each do |actor_tweet| %>
      <tr>
        <td><%= actor_tweet.id_at %></td>
        <td><%= actor_tweet.id_actor %></td>
        <td><%= actor_tweet.id_tweet %></td>
        <td>    | <%= link_to 'Ver', usuario_tweet_actor_tweet_path(@usuario, @tweet , actor_tweet) %> | </td> 
        <td><%= link_to 'Editar', edit_usuario_tweet_actor_tweet_path(@usuario , @tweet , actor_tweet) %> | </td>
        <td><%= link_to 'Eliminar', usuario_tweet_actor_tweet_path(@usuario , @tweet , actor_tweet), method: :delete, data: { confirm: '¿Está seguro?' } %> |</td>

      </tr>
    <% end %>
  </tbody>
</table>
<br>
<hr />
<h1>Tabla Textos</h1>

<table>
  <thead>
    <tr>
      <th>Id tweet</th>
      <th>Id texto</th>
      <th>Texto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @textos.each do |texto| %>
      <tr>
        <td><%= texto.id_tweet %></td>
        <td><%= texto.id_texto %></td>
        <td><%= texto.texto %></td>
        <td>|<%= link_to 'Ver', usuario_tweet_texto_path(@usuario, @tweet , texto) %>|</td> 
        <td><%= link_to 'Editar', edit_usuario_tweet_texto_path(@usuario , @tweet , texto) %>|</td>
        <td><%= link_to 'Eliminar', usuario_tweet_texto_path(@usuario , @tweet , texto), method: :delete, data: { confirm: '¿Está seguro?' } %>|</td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

