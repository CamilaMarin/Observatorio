<h1>Tabla Actores</h1>

<table>
  <thead>
    <tr>
      <th>Id actor</th>
      <th>Nombre actor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @actors.each do |actor| %>
      <tr>
        <td><%= actor.id_actor %></td>
        <td><%= actor.nombre_actor %></td>
        <td><%= link_to 'Ver', actor %></td>
        <td><%= link_to 'Editar', edit_actor_path(actor) %></td>
        <td><%= link_to 'Eliminar', actor, method: :delete, data: { confirm: '¿Está seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Actor', new_actor_path %>
